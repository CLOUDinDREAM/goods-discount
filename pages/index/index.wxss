/**index.wxss**/

.container {
  height: 100vh;
}
.login-user {
  position: absolute;
  width:100vw;
  height: 100vh;
  opacity: 0;
  z-index: 99;
}
.swiper-container {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 220rpx;
}
.location{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  line-height: 30rpx;
  background-color: #46743B;
  border-radius: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  opacity: 0.9;
}
.location text {
  line-height: 50rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  text-align: center;
}
.location image {
  margin-left: 10rpx; 
  width: 18rpx;
  height: 10rpx;
}
swiper {
  width: 100vw;
  height: 220rpx;
}

swiper-item image {
  width: 100vw;
  height: 220rpx;
}

.scroll-view-box {
  position: absolute; 
  width: 100%;
  top: 220rpx;
  height: 70rpx;
  padding: 10rpx 10rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  white-space: nowrap; 
}
.scroll-view-box .category-item{
  display:inline-block;
  width: 20%;
  text-align: center;
  overflow: hidden;
  line-height: 30px;
  font-size: 16px;
}

.category-item .type-select {
  font-size: 18px;
  color: #ed7230;
}

.goods-container {
  position: absolute;
  top: 300rpx;
  height: 70vh;
  width: 100vw;
  margin-bottom: 20rpx;
}

.refresh-down {
  padding-left: 25%;
  width: 100vw;
  height: 30px;
  -webkit-box-orient: horizontal;
  -webkit-box-align: center;
  background-color: #f5f5f5;
  margin: 0 auto;
}

.refresh-down text {
  font-size: 15px;
  color: #359ee6;
}

.refresh-down image {
  position: relative;
  bottom: -1rpx;
  margin-left: 10rpx;
  width: 24rpx;
  height: 24rpx;
}


.discount-store view {
  position: relative;
  display: inline-block;
  margin-left: 10rpx;
}
.discount-store view  text {
  font-size:22rpx; 
  color: #FFFFFF;
  background-color: #EB3039;
  border-radius: 30rpx;
  padding: 0 10rpx;
}
.discount-info{
  position: relative;
  width: 100%;
  height: 28%;
  float: left;
  overflow: auto;
}
.discount-info text:first-child {
  font-size:26rpx; 
}
.discount-info text:nth-child(2){
  font-size:26rpx; 
  color: #EB3039;
}
.discount-time {
  position: relative;
  width: 100%;
  height: 28%;
  float: left;
  overflow: auto;
}
.discount-time text:first-child {
  font-size:26rpx; 
}
.discount-time text:nth-child(2) {
  font-size:26rpx; 
}
.info-right {
  position: relative;
  float: left;
  width: 30%;
  height: 100%;
  /* background-color: green; */
}
.info-right .user-pic {
  position: absolute;
  top:42rpx;
  right:80rpx;
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
}
.info-right .broker-icon{
  position: absolute;
  top:35rpx;
  right:35rpx;
  width: 70rpx;
  height: 30rpx;
}
.info-right .user-name {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  text-align: center;
  font-family: FZLTHJW--GB1-0;
  color: #000000;
}
.refresh-up {
  float: left;
  padding-left: 25%;
  width: 100vw;
  height: 30px;
  -webkit-box-orient: horizontal;
  -webkit-box-align: center;
  background-color: #f5f5f5;
  margin: 0 auto;
}

.refresh-up text {
  font-size: 15px;
  color: #359ee6;
}
.refresh-up image {
  width: 24rpx;
  height: 24rpx;
}
.broke-news {
  position: fixed;
  right: 50rpx;
  bottom: 70rpx;
  width: 140rpx;
  height: 140rpx;
}
.broke-news .contact-button {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  padding: 0;
  opacity: 0;
  z-index: 100;
}
.broke-news image {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
}
.refresh-display {
  display: block;

.goods-info {
  width: 100vw;
  height: 180rpx;
  border-bottom: 1px #E0E0E0 solid;
}
.over-date text{
  color: #c4c4c4  !important;
}
.over-date .discount-store text:nth-child(2){
  color: #FFFFFF !important;
  background-color: #C4C4C4 !important;
}
.info-left {
  position: relative;
  float: left;
  left: 3%;
  width: 67%;
  height: 100%;
  /* background-color: blue; */
}
.discount-store{
  position: relative;
  width: 100%;
  height: 40%;
  float: left;
  top:20rpx;
  font-weight: 700;
  overflow: auto;
}
.discount-store .discount-store-name {
  font-size:30rpx; 
}
